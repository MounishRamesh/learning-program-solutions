
-- PL/SQL Exercise 1: Control Structures

DECLARE
   v_counter NUMBER := 1;
BEGIN
   DBMS_OUTPUT.PUT_LINE('Even Numbers between 1 and 10:');
   WHILE v_counter <= 10 LOOP
      IF MOD(v_counter, 2) = 0 THEN
         DBMS_OUTPUT.PUT_LINE(v_counter);
      END IF;
      v_counter := v_counter + 1;
   END LOOP;
END;
/
